<p id="notice"></p>
<div ckass="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model:@book, url:book_path(@book.id) ,local:true do |f| %>
      <div class="form-group">
        <lavel for="title">Title</lavel>
        <%= f.text_field :title,class:"form-control book_title" %>
      </div>
      <div class="form-group">
        <lavel for="body">Opinion</lavel>
        <%= f.text_area :body,class:"form-control book_body" %>
      </div>
      <div class="actions">
        <%= f.submit"Update Book",class:"btn btn-success"%>
      </div>
      <% end %>
      <%= link_to "Show",book_path(@book.id)%>
      |
      <%= link_to "Back",book_path %>
    </div>
  </div>
</div>